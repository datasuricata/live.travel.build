@{
    ViewData["Title"] = "Inicio";
}

<div class="page-header header-filter" data-parallax="true" style="background-image: url('../assets/img/home/background_01.jpg')">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <h1 class="text-uppercase">Sua história começa com a gente.</h1>
                <h4>Você também pode viver com tudo que sempre sonhou, mudar sua história só depende de você.</h4>
                <br>
                <a href="https://www.youtube.com/watch?v=dQw4w9WgXcQ" target="_blank" class="btn btn-primary btn-raised btn-lg">
                    <i class="fa fa-play"></i> Assista o video
                </a>
            </div>
        </div>
    </div>
</div>
<div class="main main-raised">
    <div class="container">
        <!-- Carroseul -->
        <div class="row">
            <div class="col-md-12 mr-auto ml-auto">
                <!-- Carousel Card -->
                <div class="card card-raised card-carousel">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel" data-interval="3000">
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/assets/img/banner/banner1.png" alt="First slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h4>
                                        <i class="material-icons">location_on</i> Yellowstone National Park, United States
                                    </h4>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/assets/img/banner/banner2.png" alt="Second slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h4>
                                        <i class="material-icons">location_on</i> Somewhere Beyond, United States
                                    </h4>
                                </div>
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/assets/img/banner/banner3.png" alt="Third slide">
                                <div class="carousel-caption d-none d-md-block">
                                    <h4>
                                        <i class="material-icons">location_on</i> Yellowstone National Park, United States
                                    </h4>
                                </div>
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <i class="material-icons">keyboard_arrow_left</i>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <i class="material-icons">keyboard_arrow_right</i>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <!-- End Carousel Card -->
            </div>
        </div>
    </div>
    <div class="container">

        <!-- Partial Institucional -->
        <partial name="_Institucional" />

        <div class="container text-center" style="padding-bottom: 100px;">
            <div class="features">
                <div class="row">
                    <div data-tilt class="col-md-4">
                        <div class="info">
                            <div class="icon icon-info">
                                <i class="material-icons">beenhere</i>
                            </div>
                            <h4 class="info-title">Responsabilidade</h4>
                            <p>25ª maior empresa de vendas direta do planeta.</p>
                        </div>
                    </div>
                    <div data-tilt class="col-md-4">
                        <div class="info">
                            <div class="icon icon-success">
                                <i class="material-icons">map</i>
                            </div>
                            <h4 class="info-title">Diferencial</h4>
                            <p>43x campeã do World Travel Awards.</p>
                        </div>
                    </div>
                    <div data-tilt class="col-md-4">
                        <div class="info">
                            <div class="icon icon-danger">
                                <i class="material-icons">assignment_turned_in</i>
                            </div>
                            <h4 class="info-title">Qualidade</h4>
                            <p>Credibilidade e reconhecimento.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
