@model live.travel.solution.Models.ViewModels.DashboardViewGeneral

@{
    ViewData["Title"] = "Inicio";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    TempData["Index"] = "active";
}

<div class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <div class="card card-chart">
                    <div class="card-header card-header-success">
                        <p class="centralize h5 badge badge-dark h-100 w-100">@Model.Daily</p>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Entradas Diárias</h4>
                        <p class="card-category">Resumo de todas diárias</p>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">access_time</i> ultima atualização: @DateTime.Now.ToString("mm/dd HH:mm")
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-chart">
                    <div class="card-header card-header-warning">
                        <p class="centralize h5 badge badge-dark h-100 w-100">@Model.All</p>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Inscrições E-mail</h4>
                        <p class="card-category">Resumo de todas entradas</p>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">access_time</i> ultima atualização: @DateTime.Now.ToString("mm/dd HH:mm")
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card card-chart">
                    <div class="card-header card-header-danger">
                        <p class="centralize h5 badge badge-dark h-100 w-100">@Model.Completes</p>
                    </div>
                    <div class="card-body">
                        <h4 class="card-title">Registros Completos</h4>
                        <p class="card-category">Registros completos</p>
                    </div>
                    <div class="card-footer">
                        <div class="stats">
                            <i class="material-icons">access_time</i> ultima atualização: @DateTime.Now.ToString("mm/dd HH:mm")
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12">
                <div class="card">
                    <div class="card-header card-header-warning">
                        <h4 class="card-title">Status de Associados</h4>
                        <p class="card-category">Ultimas ordens</p>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class=" text-warning">
                                    <tr>
                                        <th>Data</th>
                                        <th>Nome</th>
                                        <th>Plano</th>
                                        <th>Cidade</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var x in Model.Forms) {
                                        <tr>
                                            <td>@x.CreatedAt</td>
                                            <td>@x.Name</td>
                                            <td class="text-primary">@x.Plan</td>
                                            <td class="text-primary">@x.City</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
